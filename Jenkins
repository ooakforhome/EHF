#!/bin/sh

ssh -t -t ubuntu@ip-172-31-47-130 <<EOF
    echo "Let's change to repo EHF"
    cd ~/EHF
    pipeline {
        agent 'Node 11' 
        stages {
            stage('Build') {
                steps {
                    sh 'git pull origin master'
                    sh 'npm install'
                }
            }
            stage('Test'){
                steps {
                    sh 'npm test'
                }
            }
        }
    }
    exit
EOF
